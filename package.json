{
  "name": "@flybondi/graphql-import",
  "version": "0.0.0",
  "engines": {
    "node": ">=4.0.0"
  },
  "license": "MIT",
  "repository": "https://github.com/flybondi/graphql-import",
  "files": [
    "index.js",
    "src/"
  ],
  "main": "dist/index.js",
  "scripts": {
    "prettier": "prettier --write \"src/**/*.js\" index.js",
    "test": "jest --env=node --colors --bail --detectOpenHandles --errorOnDeprecated --noStackTrace src/",
    "lint": "eslint src index.js"
  },
  "peerDependencies": {
    "graphql": "^0.11.0 || ^0.12.0 || ^0.13.0 || ^14.0.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^7.5.0",
    "@types/glob": "^7.1.1",
    "@types/graphql": "^14.0.5",
    "@types/jest": "^24.0.0",
    "@types/node": "^10.12.21",
    "@types/ramda": "^0.25.47",
    "@types/resolve-from": "^4.0.0",
    "commitlint": "^7.5.0",
    "eslint": "^5.13.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-ramda": "^2.5.1",
    "eslint-plugin-standard": "^4.0.0",
    "graphql": "^14.1.1",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4"
  },
  "dependencies": {
    "glob": "^7.1.3",
    "ramda": "^0.26.1",
    "resolve-from": "^4.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "run-s test"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "src/**/*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "branch": "master",
    "prepare": [
      "@semantic-release/npm",
      {
        "path": "@semantic-release/exec",
        "cmd": "npx run-s generate-docs"
      },
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "docs/"
        ],
        "message": "chore(release): ${nextRelease.version} \n\n${nextRelease.notes}"
      }
    ],
    "verifyConditions": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ],
    "analyzeCommits": {
      "path": "@semantic-release/commit-analyzer",
      "preset": "angular"
    },
    "publish": [
      {
        "path": "@semantic-release/npm"
      },
      {
        "path": "@semantic-release/github"
      }
    ]
  }
}
