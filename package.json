{
  "name": "@flybondi/graphql-import",
  "version": "0.0.0-dev",
  "engines": {
    "node": ">=4.0.0"
  },
  "license": "MIT",
  "repository": "https://github.com/flybondi/graphql-import",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "typescript": {
    "definition": "dist/index.d.ts"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.test.ts"
    ],
    "all": true,
    "sourceMap": true,
    "instrument": true
  },
  "scripts": {
    "prepare": "run-s build",
    "build": "rm -rf dist && tsc -d",
    "testlocal": "run-s build && nyc --reporter lcov --reporter text ava-ts -u --verbose src/**/*.test.ts",
    "test": "run-s build && mkdir -p ~/reports && nyc --reporter lcov ava-ts --verbose src/**/*.test.ts --tap | tap-xunit > ~/reports/ava.xml",
    "lint": "tslint src/**/*.ts",
    "docs": "typedoc --out docs src/index.ts --hideGenerator --exclude **/*.test.ts",
    "docs:publish": "cp ./now.json ./docs && cd docs && now --public -f && now alias && now rm --yes --safe graphql-import & cd .."
  },
  "peerDependencies": {
    "graphql": "^0.11.0 || ^0.12.0 || ^0.13.0 || ^14.0.0"
  },
  "devDependencies": {
    "@types/graphql": "^14.0.5",
    "@types/node": "^10.12.21",
    "@types/resolve-from": "^4.0.0",
    "ava": "^1.2.1",
    "ava-ts": "^0.25.2",
    "graphql": "^14.1.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.2.0",
    "tap-xunit": "^2.3.0",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.14.2",
    "typescript": "^3.3.1"
  },
  "dependencies": {
    "ramda": "^0.26.1",
    "resolve-from": "^4.0.0"
  }
}
